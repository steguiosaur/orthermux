
# ALIASES
alias la='ls -A'
alias l='ls -CF'
alias ll='ls -alF'
alias ls='ls --color=auto'
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
alias nv='nvim'
alias grep='grep --color=auto'
alias histogrep='history | grep'
alias ..='cd ..'

# EXPORTS
export EDITOR=nvim
export HISTCONTROL=ignoreboth
export TERM=xterm-256color
